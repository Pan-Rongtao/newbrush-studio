<UserControl x:Class="studio.BooleanEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:studio="clr-namespace:studio"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ToggleButton x:Name="tb" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" ToolTip="MaterialDesignSwitchLightToggleButton" 
                      IsChecked="{Binding Path=Value, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type studio:BooleanEdit}}, Mode=TwoWay}" />
    </Grid>
</UserControl>
